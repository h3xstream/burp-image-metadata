<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.h3xstream.img-metadata</groupId>
    <artifactId>img-metadata-root-pom</artifactId>
    <version>2.0.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>Image Metadata (root pom.xml)</name>


    <profiles>
        <profile>
            <id>all-modules</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>img-metadata-core</module>
                <module>img-metadata-burp-plugin</module>
                <module>img-metadata-zap-plugin</module>
                <module>burp-api</module>
            </modules>
        </profile>

        <profile> <!-- The Burp Team is allergic to ZAP. They don't want to compile a ZAP plugin ever. ;) -->
            <id>burp-only</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>img-metadata-core</module>
                <module>img-metadata-burp-plugin</module>
                <module>burp-api</module>
            </modules>
        </profile>
    </profiles>

    <properties>
        <!-- Encoding configuration -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>

        <plugins>
            <!-- Force the use of Java 6 compiler -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

        </plugins>
    </build>


    <dependencyManagement>
        <dependencies>

            <!-- Sub modules versions -->
            <dependency>
                <groupId>com.h3xstream.img-metadata</groupId>
                <artifactId>img-metadata-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.h3xstream.img-metadata</groupId>
                <artifactId>img-metadata-burp</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Logging for the core module -->

            <dependency>
                <groupId>com.esotericsoftware</groupId>
                <artifactId>minlog</artifactId>
                <version>1.3</version>
            </dependency>

            <dependency>
                <groupId>com.h3xstream.img-metadata</groupId>
                <artifactId>burp-api</artifactId>
                <version>${project.version}</version>
            </dependency>


            <dependency>
                <groupId>org.zaproxy</groupId>
                <artifactId>zap-proxy</artifactId>
                <version>2.2.2</version>
                <scope>provided</scope>
            </dependency>


            <dependency>
                <groupId>commons-httpclient</groupId>
                <artifactId>commons-httpclient</artifactId>
                <version>3.1</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>commons-configuration</groupId>
                <artifactId>commons-configuration</artifactId>
                <version>1.10</version>
                <scope>provided</scope>
            </dependency>


            <!-- Log4J -->
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>1.2.17</version>
                <scope>provided</scope>
            </dependency>


            <dependency>
                <groupId>com.drewnoakes</groupId>
                <artifactId>metadata-extractor</artifactId>
                <version>2.7.0</version>
            </dependency>


            <dependency>
                <groupId>ar.com.hjg</groupId>
                <artifactId>pngj</artifactId>
                <version>2.1.0</version>
            </dependency>

            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>7.7.0</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>
</project>